@model IPagedList

<nav>
    <ul class="pagination justify-content-end">
        @{

            if (Model.PageIndex == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link">Anterior</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-page="@(Model.PageIndex - 1)" asp-route-pageSize="@Model.PageSize" asp-route-query="@Model.Query">Anterior</a>
                </li>
            }


            for (var i = 1; i < Model.TotalPages + 1; i++)
            {
                if (i > Model.PageIndex - 5 && i < Model.PageIndex + 5)
                {
                    if (i == Model.PageIndex)
                    {
                        <li class="page-item active">
                            <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-page="@i" asp-route-pageSize="@Model.PageSize" asp-route-query="@Model.Query">@i <span class="sr-only">(current)</span></a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-page="@i" asp-route-pageSize="@Model.PageSize" asp-route-query="@Model.Query">@i</a>
                        </li>
                    }
                }
            }

            if (Model.PageIndex == Model.TotalPages)
            {
                <li class="page-item disabled">
                    <a class="page-link">Próximo</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-page="@(Model.PageIndex + 1)" asp-route-pageSize="@Model.PageSize" asp-route-query="@Model.Query">Próximo</a>
                </li>
            }

        }

    </ul>
</nav>
