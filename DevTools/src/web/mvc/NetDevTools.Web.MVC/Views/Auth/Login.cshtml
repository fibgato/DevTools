@model NetDevTools.Web.MVC.Models.Usuarios.UsuarioAutenticar
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutUnauthorize";
}

<div class="row">
    <div class="col-lg-6" style="margin-top: 120px;">
        <h3 class="font-weight-bold">Infotech - Acesso do cliente</h3>

        <h1 class="font-weight-bold mt-5" style="font-size:60px;">Faça seu login na plataforma</h1>
    </div>

    <div class="col-lg-6" style="margin-top: 120px;">

        <vc:summary></vc:summary>

        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" style="margin: 40px;">

            <div class="form-floating mb-2">
                <input asp-for="Email" type="email" class="form-control" autocomplete="off" placeholder="email@exemplo.com.br">
                <label asp-for="Email">Email</label>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Senha" type="password" class="form-control" autocomplete="off" placeholder="Insira sua senha">
                <label asp-for="Senha">Senha</label>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                    Entrar
                </button>
            </div>
        </form>

        <div class="card-footer text-center">Ainda não tem uma conta?<a asp-controller="Auth" asp-action="Adicionar"> Criar uma conta</a></div>

    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
    }
